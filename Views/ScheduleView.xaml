                                        <TextBlock Text="{Binding EndTimeText[1]}" />
                                    </StackPanel>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Button Grid.Row="3"  Background="{Binding AcceptedSchedules[2], Converter={StaticResource BoleanToBrushConverter}}" Style="{StaticResource MonthButton}"
